<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context="com.student.ramirez.quizplusplus.RecordActivity">

    <Button
        android:id="@+id/btnBack"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/backbutton" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnBack"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="5dp"
        android:text="Scores / Records"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnBack"
        android:layout_below="@+id/btnBack"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:text="Room #"
        android:textColor="#AFAFAF" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView15"
        android:layout_alignBottom="@+id/textView15"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/btnBack"
        android:text="Title"
        android:textColor="#AFAFAF" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewStudentRecords"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView16"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recyclerViewStudentRecords"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/textView16"
        android:text="Quiz Title"
        android:textColor="#AFAFAF" />

</android.widget.RelativeLayout>
