<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#325F92"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/txtQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/arimo"
                android:text="@string/_00000"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtQuestion"
                android:layout_below="@+id/txtQuestion"
                android:fontFamily="@font/arimo"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/txtQuizDesc"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtScore"
                android:layout_below="@+id/txtScore"
                android:fontFamily="@font/arimo"
                android:text="@string/this_is_a_sample_quiz_description"
                android:textColor="@color/whitesmoke"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/btnEditInformation"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignTop="@+id/txtScore"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@+id/txtScore"
                android:background="#4D9E39"
                android:src="@drawable/editprofilepictureicon" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>